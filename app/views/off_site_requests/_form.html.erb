<script type="text/javascript">
  jQuery(function() {
    observe_hostname_in_use();
    observe_for_department_sponsor();
    setup_lightbox();
  });
</script>

<%= semantic_form_for(@os_req) do |form| %>
  <%= form.buttons do %>
    <%= form.commit_button("Submit") %>
    <%= link_to("View All", off_site_requests_path, :class => "button_widget") %>
    <%= conditional_delete_button(form.object) %>
    <%= required_field_notice.html_safe %>
  <% end %>
  <br id="spacing"/>

  <%= form.inputs do %>
    <%= form.input(:status, :input_html => {:disabled => true}, :as => :string) %>
    <%= form.input(:submitter_full_name, :label => "Submitter", :input_html => {:disabled => true}) %>
    <%= form.input(:hostname, :hint => Hints.hostname) %>
    <%= form.input(:hostname_in_use, :required => true, :as => :radio, :collection => yes_no, :hint => Hints.hostname_in_use) %>
    <%= form.input(:arachne_or_socrates, :as => :radio, :collection => yes_no, :hint => Hints.arachne_or_socrates) %>
    <%= form.input(:sponsoring_department, :collection => @department_list,  :hint => Hints.sponsoring_department) %>
    <%= form.input(:for_department_sponsor, :required => true, :collection => yes_no_with_explanation, :as => :radio, :hint => Hints.for_department_sponsor) %>
    <%= form.input(:name_of_group, :required => true, :hint => Hints.name_of_group) %>
    <%= form.input(:relationship_of_group, :required => true, :hint => Hints.relationship_of_group) %>
    <%= form.input(:off_site_ip, :label => "Off-Site IP", :hint => Hints.off_site_ip) %>
    <%= form.input(:off_site_service, :label => "Off-Site Service", :hint => Hints.off_site_service) %>
    <%= form.input(:confirmed_service_qualifications, :required => true, :as => :radio, :collection => yes_no, :label => "Confirmed Qualifications?", :hint => Hints.confirmed_service_qualifications) %>
    <%= form.input(:ext_circumstances, :label => "Will the system collect, transmit, process or<BR> maintain any of the following types of sensitive <BR>information? (check all that apply)".html_safe, :as => :check_boxes, :collection => @ext_circumstances_list) %>
    <%= form.input(:other_ext_circumstances, :label => "Description", :hint => Hints.other_ext_circumstances) %>

        <%= form.input(:meets_ctc_criteria, :label => "Needs CTC Review", :required => true, :as => :radio, :collection => yes_no, :hint => Hints.meets_ctc_criteria) %>

    <%= form.input(:campus_official_full_name, :required => true, :label => "Resource Proprietor", :after_input => ldap_lookup_link_to("campus_official"), :input_html => {:disabled => true}, :hint => Hints.campus_official.html_safe) %>
    <%= form.input(:campus_official_ldap_uid, :as => :hidden) %>

    <%= form.buttons do %>
      <%= form.commit_button("Submit") %>
      <%= link_to("View All", off_site_requests_path, :class => "button_widget") %>
    <% end %>
  <% end %>
<% end %>

<hr/>
<%= render('campus_official_agreement') %>
