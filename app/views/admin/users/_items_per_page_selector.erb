<% form_tag('', :method => :get) do %>
  <table class="vertical">
    <tr>
      <th>Page Size:</th>
      <td>
        <%= select_tag :page_size, options_for_select([["5","5"],["10","10"],["30","30"],["50","50"],["100","100"]], [page_size, page_size]) %>
      </td>
      <td>
        <%= submit_tag "Set", :name => nil %>
      </td>
    </tr>
  </table>
<% end %>