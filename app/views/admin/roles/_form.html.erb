

<%= semantic_form_for([:admin, role]) do |form| %>
  <%= form.inputs do %>
    <%= form.input(:name, :input_html => {:disabled => !form.object.new_record?}) %>
    <%= form.input(:description, :as => :text, :input_html => {:rows => 5, :cols => 25}) %>
    <%= form.buttons do %>
      <%= form.commit_button("Submit") %>
      <%= link_to("View All", admin_roles_path, :class => "button_widget") %>
    <% end %>
  <% end %>
<% end %>
